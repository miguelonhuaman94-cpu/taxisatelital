---
import Card from "@/components/ui/card/Card.astro";
import CardContent from "@/components/ui/card/CardContent.astro";
import SectionTitle from "@/components/SectionTitle.astro";

import { STATS, VALUES } from "@/data/why-us";
---

<section
  id="why-us"
  class="py-20 bg-gradient-to-b from-background to-accent/10"
>
  <div class="container mx-auto px-4 lg:px-8">
    <SectionTitle
      title="¿Por qué elegirnos?"
      description="Somos líderes en servicios de transporte premium con valores que nos distinguen"
    />

    {/* Stats Section */}
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-16">
      {
        STATS.map((stat) => (
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-primary mb-2">
              {stat.number}
            </div>
            <div class="text-brand-gray font-medium">{stat.label}</div>
          </div>
        ))
      }
    </div>

    {/* Values Section */}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {
        VALUES.slice(0, 3).map((value) => (
          <Card class="group card-brand hover-scale border-0 overflow-hidden">
            <div class:list={["h2 bg-gradient-to-r", value.color]} />

            <CardContent class="p-8">
              <div class="text-center mb-6">
                <div
                  class:list={[
                    "w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-r flex items-center justify-center",
                    value.color,
                  ]}
                >
                  <value.icon class="w-8 h-8 text-white" />
                </div>
                <h3 class="text-2xl font-semibold text-brand-dark mb-3">
                  {value.title}
                </h3>
                <p class="text-brand-gray leading-relaxed">
                  {value.description}
                </p>
              </div>

              {/* <div class="space-y-3">
                {value.features.map((feature) => (
                  <div class="flex items-center text-sm text-brand-gray">
                    <CheckCircle class="w-4 h-4 text-green-500 mr-3 flex-shrink-0" />
                    {feature}
                  </div>
                ))}
              </div> */}
            </CardContent>
          </Card>
        ))
      }
    </div>

    {/* CTA Section */}
    <div class="text-center mt-16">
      <div
        class="bg-gradient-to-r from-primary to-green-600 rounded-2xl p-8 text-white"
      >
        <h3 class="text-2xl md:text-3xl font-bold mb-4">
          ¿Listo para experimentar la diferencia?
        </h3>
        <p class="text-lg text-green-100 mb-6 max-w-2xl mx-auto">
          Únete a miles de clientes satisfechos que confían en nuestro servicio
          premium de transporte
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button
            aria-label="Hacer una reserva"
            data-message="Hola, me gustaría hacer una reserva."
            class="cursor-pointer bg-white text-primary px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-brand"
          >
            Hacer una reserva
          </button>

          <!-- <button
            aria-label="Contactar ahora"
            class="cursor-pointer border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-primary transition-brand"
          >
            Contactar ahora
          </button> -->
        </div>
      </div>
    </div>
  </div>
</section>
