---
import CardUI from "@/components/ui/card/Card.astro";
import { Image } from "astro:assets";

type SectionName =
  | "services"
  | "services-per-hour"
  | "tourist-destinations"
  | "airport-transfers-vehicles"

interface Service {
  id: string;
  title: string;
  url: string;
  icon?: any
}

const { id, title, icon: Icon, url } = Astro.props as Service;
---

<CardUI
  id={id}
  class="group service-card card-brand hover-scale overflow-hidden border-0"
>
  <div class="relative h-60 overflow-hidden">
    <Image
      alt={title}
      src={url ?? `/assets/services/${id}.jpg`}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      width={600}
      height={400}
      loading="lazy"
    />

    <div
      class="absolute inset-0 bg-gradient-to-t from-brand-dark/60 to-transparent"
    >
    </div>
    {
      Icon && (
        <div class="absolute top-4 left-4 w-12 h-12 bg-primary rounded-lg flex items-center justify-center">
          <Icon class="w-6 h-6 text-white" />
        </div>
      )
    }
  </div>

  <slot />
</CardUI>
