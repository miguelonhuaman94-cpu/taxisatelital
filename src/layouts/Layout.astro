---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import WhatsApp from "@/components/WhatsApp.astro";
import "@fontsource/poppins/100.css";
import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";
import "@fontsource/poppins/900.css";

import "../styles/global.css";

import {PHONE_NUMBER, URL_SITE} from "astro:env/client";
---

<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="robots" content="index, follow"/>
    <meta name="generator" content={Astro.generator}/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <link rel="canonical" href={URL_SITE}/>
    <link rel="sitemap" href="/sitemap-index.xml"/>

    <title>Taxi Satelital Premium Lima | Taxi Aeropuerto Perú</title>
    <meta
            name="description"
            content="Taxi Satelital Premium en Lima, Perú. Servicio ejecutivo 24 horas: traslado al aeropuerto, chofer de reemplazo, viajes turísticos, envíos, mudanzas y más."
    />
    <meta
            name="keywords"
            content="taxi satelital lima, taxi aeropuerto jorge chávez, taxi ejecutivo lima, chofer por horas, taxi confiable lima, mudanzas lima, taxi turístico lima, envío de paquetes"
    />
    <meta name="author" content="Taxi Satelital Premium Lima"/>

    <!-- Open Graph -->
    <meta property="og:locale" content="es_PE"/>
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="Taxi Satelital Premium Lima | Servicio Ejecutivo 24/7 en Perú"/>
    <meta
            property="og:description"
            content="Taxi Satelital Premium en Lima, Perú. Transporte ejecutivo al aeropuerto, viajes turísticos, chofer de reemplazo, servicio por horas, mudanzas y más."
    />
    <meta property="og:url" content={URL_SITE}/>
    <meta property="og:site_name" content="Taxi Satelital Premium"/>
    <meta property="og:image" content="/hero.webp"/>
    <meta property="og:image:secure_url" content="/hero.webp"/>
    <meta property="og:image:width" content="1680"/>
    <meta property="og:image:height" content="1120"/>
    <meta property="og:image:alt" content="Taxi Satelital Premium Lima - Transporte Ejecutivo"/>
    <meta property="og:image:type" content="image/webp"/>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:title" content="Taxi Satelital Premium Lima | Servicio Ejecutivo 24/7 en Perú"/>
    <meta
            name="twitter:description"
            content="Somos Taxi Satelital Premium en Lima. Servicio de taxi seguro y confiable, 24 horas, para traslados al aeropuerto, turismo, paquetes, mudanzas y más."
    />
    <meta name="twitter:image" content="/hero.webp"/>
    <meta name="twitter:site" content="@TaxiSatelitalPremium"/>
    <meta name="twitter:creator" content="@TaxiSatelitalPremium"/>

    <!-- Schema.org JSON-LD -->
    <script
            type="application/ld+json"
            set:html={JSON.stringify({
                "@context": "https://schema.org",
                "@graph": [
                    {
                        "@type": ["TaxiService", "LocalBusiness"],
                        "@id": `${URL_SITE}/#organization`,
                        name: "Taxi Satelital Premium",
                        url: URL_SITE,
                        telephone: PHONE_NUMBER,
                        description: "Servicio de taxi satelital ejecutivo en Lima, Perú. Transporte seguro al aeropuerto, turismo, mudanzas y más.",
                        image: `${URL_SITE}/logo.png`,
                        address: {
                            "@type": "PostalAddress",
                            addressLocality: "Lima",
                            addressRegion: "Lima",
                            addressCountry: "PE"
                        },
                        openingHours: "Mo,Tu,We,Th,Fr,Sa,Su 00:00-23:59",
                        priceRange: "$$",
                        serviceArea: {
                            "@type": "GeoCircle",
                            geoMidpoint: {
                                "@type": "GeoCoordinates",
                                latitude: -12.0464,
                                longitude: -77.0428
                            },
                            geoRadius: 50000
                        },
                        areaServed: {
                            "@type": "Place",
                            name: "Lima"
                        },
                        makesOffer: [
                            {
                                "@type": "Offer",
                                name: "Traslado al aeropuerto"
                            },
                            {
                                "@type": "Offer",
                                name: "Chofer de reemplazo"
                            },
                            {
                                "@type": "Offer",
                                name: "Viajes turísticos"
                            },
                            {
                                "@type": "Offer",
                                name: "Envío de paquetes"
                            },
                            {
                                "@type": "Offer",
                                name: "Viajes escolares"
                            },
                            {
                                "@type": "Offer",
                                name: "Carga y mudanzas"
                            },
                            {
                                "@type": "Offer",
                                name: "Servicio por horas"
                            }
                        ]
                    },
                    {
                        "@type": "WebSite",
                        "@id": `${URL_SITE}/#website`,
                        url: URL_SITE,
                        name: "Taxi Satelital Premium",
                        publisher: {
                            "@id": `${URL_SITE}/#organization`
                        },
                        inLanguage: "es",
                        potentialAction: {
                            "@type": "SearchAction",
                            target: `${URL_SITE}/?s={search_term_string}`,
                            "query-input": "required name=search_term_string"
                        }
                    }
                ]
            })}
    />


    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17500159047">
    </script>
    <script client:load>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'AW-17500159047');
    </script>


    </head>

<body>
<Header/>
<main>
<slot />
</main>
<WhatsApp/>
<Footer/>
</body>
</html>

<style>
    html,
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: "Poppins", sans-serif;
        background-color: #ffffff;
        color: #111111;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    img {
        max-width: 100%;
        height: auto;
        display: block;
    }
</style>

<script
        define:vars={{
            phoneNumber: PHONE_NUMBER,
        }}
>
    const reservationButtons = document.querySelectorAll("[data-message]");
    reservationButtons.forEach((button) => {
        button.addEventListener("click", () => {
            const message = button.getAttribute("data-message");
            const whatsappUrl = `https://api.whatsapp.com/send?phone=${phoneNumber}&text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, "_blank");
        });
    });
</script>
